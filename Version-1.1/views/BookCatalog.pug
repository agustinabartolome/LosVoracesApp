doctype html 
html
    head
        title Catalogo de Libros
        link(rel="stylesheet", href="/css/style.css")
    body 
        button(onclick="location.href='/dashboard'") Volver 
        h1 Catalogo de Libros 
        table
            thead 
                tr 
                    th ID
                    th Titulo 
                    th Autor 
                    th Editorial 
                    th ISBN 
                    th Género 
                    th Sección 
                    th Precio 
                    th Stock 
            tbody 
                each book in books 
                    tr 
                    td(class='num')= book.bookId 
                    td= book.title 
                    td= book.author
                    td= book.publisherHouse 
                    td(class='num')= book.isbn 
                    td= book.literaryGenre 
                    td= book.section 
                    td(class='num') $#{book.price}
                    td(class='num')= book.stock