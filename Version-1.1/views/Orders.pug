doctype html 
html
    head
        title Pedidos
        link(rel="stylesheet", href="/css/style.css")
    body 
        button(onclick="location.href='/dashboard'") Volver
        h1 Pedidos
        table
            thead 
                tr 
                    th ID
                    th ID de Proveedor 
                    th Producto
                    th Fecha 
                    th Descripcion
                    th Categoria 
                    th Precio 
                    th Cantidad 
                    th Estado
                    th Total 
            tbody 
                each order in orders 
                    tr 
                    td(class='num')= order.orderId 
                    td(class='num')= order.supplierId
                    td
                        if order.product.name
                            span= order.product.name 
                        else if order.product.title
                            span= order.product.title
                        else 
                            span (sin nombre/titulo)
                    td= order.date 
                    td= order.description
                    td= order.category 
                    td(class='num') $#{order.price}
                    td(class='num')= order.quantityProduct
                    td= order.status
                    td(class='num') $#{order.total}